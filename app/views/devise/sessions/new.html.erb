<div class='form-box'>
  <h2>Log in</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class='form-input'>
      <%= f.label :email, class: 'form-labels' %><br />
      <%= f.email_field :email, placeholder: 'example@domain.com', autofocus: true %>

  

      <%= f.label :password, class: 'form-labels' %><br />
      <%= f.password_field :password, autocomplete: "off" %>

    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <span class='remember-me'><%= f.label :remember_me %></span>
      </div>
    <% end -%>
  
    <div class="actions-btn">
      <%= f.submit "Log in", class: 'submit-btn' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>