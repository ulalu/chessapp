<h3>Game Show Page</h3>
<%= link_to 'Home', root_path, class: 'btn btn-primary' %>

<div class="board-container">
    <table id="board" style="width: 100%, height: auto">
    <% 8.times.each do |row| %>
      <tr id="row">
        <% 8.times.each do |col| %>
          <% piece = @game.pieces.where(position_x: col, position_y: row).first %>
          <% if piece.present? %>
            <td id="row_<%= row %>_col_<%= col %>" class="<%= piece.color %>_<%= piece.type %>" data-piece_id="<%= piece %>" data-piece_name="<%= piece.color %>_<%= piece.type %>">
              <% image = "#{piece.color}_#{piece.type}.png" %>
              <%= image_tag image, class: 'draggable', id: "data-piece-id=#{piece.id}" %>
            </td>
          <% else %>
            <td id="row_<%= row %>_col_<%= col %>"></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
