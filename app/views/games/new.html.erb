<div class="booyah-box">

  <div class="create-game">
    <div class="row">
        <div class="col-12">
          <h1>Create Game</h1>
        </div>
      <div class="form-box row">
          <%= simple_form_for @game, url: games_path do |f| %>
          <%= f.input :name %>
          <%= f.input :email %> 
      </div>
    </div>
  </div>

  <br />
  
  <div class="choose-army">
    <div class="row">
      <div class="col-md-12">
        <h2>Choose Your Army</h2>
      </div>
    <div class="row black-or-white">
      <div class="white">
        <%= image_tag ("white_Knight_flip.png") %>
        <br />
        <%= f.submit "Play White", class: 'btn white btn-primary', name: 'game[white_id]' %>
        
      </div>
      <div class="black">
        <%= image_tag ("black_Knight.png") %>
        <br />
        <%= f.submit "Play Black", class: 'btn black btn-primary', name: 'game[black_id]' %>
        <% end %>
      </div>
    </div>
  </div>
  </div>

</div>